<div class="container">
    <div class="form-offset col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Zaloguj się</div>
            </div>
            <div class="panel-body" >
                {{#if errors}}
                    {{#each errors}}
                        <div class="alert alert-warning">
                            {{msg}}
                        </div>
                    {{/each}}
                {{/if}}

                <form role="form" method="post" action="/users/login">

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
                            <input type="text" class="form-control" name="username" placeholder="Podaj login">
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-key" aria-hidden="true"></i></span>
                            <input type="password" class="form-control" name="password" placeholder="Podaj hasło">
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success btn-block">Zaloguj</button>
                        <a class="btn btn-primary btn-block" href="/users/logfb">Zaloguj <i class="fa fa-facebook" aria-hidden="true"></i></a>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12 ">
                            Nie posiadasz konta?
                            <a href="/users/register">Zarejestruj się</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>




